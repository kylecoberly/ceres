{{#burger-menu
	position="right"
	width=275
 as |burger|}}
	{{#burger.menu itemTagName="li" as |menu|}}
		{{material-design-icon click=burger.state.actions.close name="close"}}
		<ul {{action burger.state.actions.close}}>
			{{#menu.item}}
				{{#link-to "class-metrics"}}Classroom Metrics{{/link-to}}
			{{/menu.item}}
		</ul>
	{{/burger.menu}}
	{{#burger.outlet}}
		<header class="{{if media.isMobile 'mobile-header'}}">
			{{#link-to "index" class="logo-link"}}
				<img class="logo" src="images/logo.png" alt="Logo" />
				<h1>Ceres</h1>
			{{/link-to}}
			{{#if media.isMobile}}
				{{material-design-icon click=burger.state.actions.toggle name="menu"}}
			{{/if}}
		</header>
		<div class="body-wrapper">
			{{yield}}
		</div>
	{{/burger.outlet}}
{{/burger-menu}}
