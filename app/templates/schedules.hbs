<div class="schedules">
	<section>
		<h2>Class Schedule</h2>
		<figure class="time-off">
			<img src="images/instructor-schedule.png" alt="Instructor Schedule" />
		</figure>
	</section>
	<section class="workshops">
		<h2>Workshops</h2>
		{{#if media.isMobile}}
			{{#each model.workshopSchedules as |workshopSchedule|}}
				<h3>{{workshopSchedule.workshopName}}</h3>
				<ul>
					{{#each workshopSchedule.weeks as |week|}}
						<li>
							<p>{{week.label}}</p>
							{{#each week.days as |day|}}
								<time>{{day.date}}</time>
								<p>{{day.instructor}}</p>
							{{/each}}
						</li>
					{{/each}}
				</ul>
			{{/each}}
		{{else}}
			{{#each model.workshopSchedules as |workshopSchedule|}}
				<h3>{{workshopSchedule.workshopName}}</h3>
				<table>
					<caption>{{workshopSchedule.workshopName}}</caption>
					<thead>
						<tr>
							<th>Week</th>
							<th colspan="2">Tuesday</th>
							<th colspan="2">Thursday</th>
						</tr>
					</thead>
					<tbody>
						{{#each workshopSchedule.weeks as |week|}}
							<tr>
								<td>{{week.label}}</td>
								{{#each week.days as |day|}}
									<td><time>{{day.date}}</time></td>
									<td>{{day.instructor}}</td>
								{{/each}}
							</tr>
						{{/each}}
					</tbody>
				</table>
			{{/each}}
		{{/if}}
	</section>
	<section>
		<h2>Alumni Anonymous</h2>
		<table class="alumni-anonymous-schedule">
			<caption>Alumni Anonymous</caption>
			<thead>
				<tr>
					<th>Tuesday</th>
					<th>Thursday</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td>Chad</td>
					<td>Chad</td>
				</tr>
			</tbody>
		</table>
	</section>
	<section>
		<h2>Information Sessions</h2>
		<table class="information-sessions-schedule">
			<caption>Information Sessions</caption>
			<thead>
				<tr>
					<th>Date</th>
					<th>Campus</th>
					<th>Instructor</th>
				</tr>
			</thead>
			<tbody>
				{{#each infoSessionSchedule as |session|}}
					<tr>
						<td>{{session.date}}</td>
						<td>{{session.campus}}</td>
						<td>{{session.instructor}}</td>
					</tr>
				{{/each}}
			</tbody>
		</table>
	</section>
	<section>
		<h2>Other Events</h2>
		<table class="information-sessions-schedule">
			<caption>Other Events</caption>
			<thead>
				<tr>
					<th>Date</th>
					<th>Event</th>
					<th>Instructor</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td>1/31</td>
					<td>Crush The Take-Home</td>
					<td>Danny</td>
				</tr>
			</tbody>
		</table>
	</section>
</div>
